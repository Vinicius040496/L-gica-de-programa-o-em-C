using System;

namespace Lógica_programação_questão9
{
    internal class Program
    {
        //Escreva um algoritmo que leia um valor e diga se é positivo ou negativo
        static void Main(string[] args)
        {
            Console.WriteLine("Escreva um valor:");
            int Valor = int.Parse(Console.ReadLine());

            if (Valor >= 0)
            {
                Console.WriteLine("O valor é positivo!");
            }
            else if (Valor < 0)
            {
                Console.WriteLine("O valor é negativo!");
            }
        }
    }
}



