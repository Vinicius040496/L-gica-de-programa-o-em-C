using System;

namespace Logica_Programação_Questão3
{
    internal class Program
    {
        //   // escreva um algoritmo que leia idade de uma pessoa expressa em anos,meses e dias, e escreva a idade dessa pessoa expressa em dias.

        static void Main(string[] args)
        {
            Console.WriteLine("Qual é a sua idade em anos: ");
            int idadeAnos = int.Parse(Console.ReadLine());

            int meses = idadeAnos * 12;
            Console.WriteLine("Você tem aproximadamente " + meses + " meses de vida.");

            int dias = idadeAnos * 365; 
            Console.WriteLine("Você tem aproximadamente " + dias + " dias de vida.");

            Console.ReadLine();
        }
    }
}
