using System;

namespace Logica_Programação_Questão3
{
    internal class Program
    {
        static void Main(string[] args)
        {
           // escreva um algoritmo que leia idade de uma pessoa expressa em anos,meses e dias, e escreva a idade dessa pessoa expressa em dias.

            Console.WriteLine("Qual sua idade: ");
            int idade;
            idade = int.Parse (Console.ReadLine());
            int meses;
            meses = idade * 12;
            Console.WriteLine(" Você possui: " + meses + (" Meses De vida "));
            int dias;
            dias = meses * 30;
            Console.WriteLine(" Você possui: " + dias + (" Dias De vida "));
          
            Console.ReadLine();

        }
    }
}
