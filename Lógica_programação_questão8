using System;

namespace Lógica_programação_questão8
{
    internal class Program
    {
        //Escreva um algoritmo que leia e escreva se o valor informado é maior, ou menor que 10
        static void Main(string[] args)
        {
            Console.WriteLine("Escreva um valor:");
            int valor = int.Parse(Console.ReadLine());

            if (valor > 10)
            {
                Console.WriteLine("O valor é maior que 10");
            }
            else if (valor < 10)
            {
                Console.WriteLine("O valor é menor que 10");
            }
            else
            {
                Console.WriteLine("O valor é igual a 10");
            }
        }
    }
}
