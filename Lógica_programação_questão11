using System;

namespace Lógica_programação_questão11
{
    internal class Program
    {
        //Faça um algortimo que leia duas notas e calcule com base na média se foi aprovado ou reprovado. Considerando que a média aprovação é >=7.0
        static void Main(string[] args)
        {
            Console.WriteLine("Escreva a primeira nota:");
            float Nota1 = float.Parse(Console.ReadLine());

            Console.WriteLine("Escreva a segunda nota:");
            float Nota2 = float.Parse(Console.ReadLine());

            float Média = (Nota1 + Nota2) / 2;

            Console.WriteLine("A média das notas é: " + Média);

            if (Média >= 7)
            {
                Console.WriteLine("Aluno aprovado!");
            }
            else
            {
                Console.WriteLine("Aluno reprovado!");
            }
        }
    }
}
