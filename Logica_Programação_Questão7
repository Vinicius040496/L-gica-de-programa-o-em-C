using System;

namespace Logica_Programação_Questão7
{
    internal class Program
    {
        // Faça um algoritmo que leia três notas de um aluno, calcule e escreva a média final deste aluno.
        // Considere que a média é poderada e que o peso das notas é 2, 3 e 5. formule o calculo.

        static void Main(string[] args)
        {
            Console.WriteLine("Escreva a primeira nota:");
            float n1 = float.Parse(Console.ReadLine());

            Console.WriteLine("Escreva a segunda nota:");
            float n2 = float.Parse(Console.ReadLine());

            Console.WriteLine("Escreva a terceira nota:");
            float n3 = float.Parse(Console.ReadLine());

            float Media = (n1 * 2) + (n2 * 3) + (n3 * 5);
            float Resultado = Media / 10;

            Console.WriteLine("A média das provas foi: " + Resultado);
        }
    }
}
