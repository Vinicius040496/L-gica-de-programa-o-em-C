using System;

namespace Lógica_programação_questão2
{
    internal class Program
    {
        // // Escreva um algoritmo para ler as dimensões de um retangulo (base e altura) e calculule a sua área
        static void Main(string[] args)
        {
            Console.WriteLine("Digite a Base do retângulo:");
            int Base = int.Parse(Console.ReadLine());

            Console.WriteLine("Digite a Altura do retângulo:");
            int Altura = int.Parse(Console.ReadLine());

            int AreaRetangulo = Base * Altura;

            Console.WriteLine("A área do retângulo é: " + AreaRetangulo);
            Console.ReadLine();
        }
    }
}
